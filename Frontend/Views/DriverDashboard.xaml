<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="MyApp.Views.DriverDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AgriLink - Driver Dashboard" Height="600" Width="900" 
        WindowStartupLocation="CenterScreen">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2E7D32" CornerRadius="0,0,12,12">
            <Grid Margin="24,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🚛" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="AgriLink Driver" FontSize="28" FontWeight="Bold" 
                              Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                <Button Content="Logout" Click="LogoutButton_Click" 
                       Background="#1B5E20" Foreground="White" 
                       BorderThickness="0" Padding="12,6" 
                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" Margin="24">
            <StackPanel>
                <TextBlock Text="Welcome Driver!" FontSize="32" FontWeight="Bold" 
                          Foreground="#2E7D32" Margin="0,0,0,16"/>
                <TextBlock Text="Manage your deliveries and routes efficiently." 
                          FontSize="16" Foreground="#666" Margin="0,0,0,32"/>
                
                <!-- Feature Cards -->
                <UniformGrid Columns="3" Margin="0,0,0,24">
                    <Border Background="White" CornerRadius="12" Margin="0,0,8,0" Padding="24">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="📦" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                            <TextBlock Text="Deliveries" FontSize="18" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="View and manage your delivery orders" FontSize="14" 
                                      Foreground="#666" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="White" CornerRadius="12" Margin="4,0" Padding="24">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="🗺️" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                            <TextBlock Text="Routes" FontSize="18" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="Optimize your delivery routes" FontSize="14" 
                                      Foreground="#666" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="White" CornerRadius="12" Margin="8,0,0,0" Padding="24">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="💰" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                            <TextBlock Text="Earnings" FontSize="18" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="Track your delivery earnings" FontSize="14" 
                                      Foreground="#666" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
                
                <TextBlock Text="Ready to deliver fresh produce!"
                          FontSize="16" Foreground="#4CAF50" FontWeight="Medium" 
                          HorizontalAlignment="Center" Margin="0,24,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>