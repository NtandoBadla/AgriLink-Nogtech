<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="MyApp.Views.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign In" Height="400" Width="300">
    <ScrollViewer>
        <StackPanel Margin="24" VerticalAlignment="Center">
            <TextBlock Text="Welcome back" FontSize="28" Margin="0,0,0,16" />
            <TextBox Text="{Binding Username}" Margin="0,0,0,16" />
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,16" />
            <Button Content="Sign In" Command="{Binding SignInCommand}" Margin="0,0,0,16" />
            <TextBlock Text="{Binding Message}" Foreground="Red" />
        </StackPanel>
    </ScrollViewer>
</Window>