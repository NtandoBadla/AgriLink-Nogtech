<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="MyApp.Views.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AgriLink - Sign In" Height="600" Width="400" 
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}" 
                                         FontSize="{TemplateBinding FontSize}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="#F5F5F5">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border Background="White" CornerRadius="12" Margin="30" 
>
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                </Border.Effect>
                <StackPanel Margin="30">
                <TextBlock Text="ðŸŒ±" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <TextBlock Text="AgriLink" FontSize="32" FontWeight="Bold" 
                          HorizontalAlignment="Center" Foreground="#2E7D32" Margin="0,0,0,8"/>
                <TextBlock Text="Welcome back" FontSize="18" 
                          HorizontalAlignment="Center" Foreground="#666" Margin="0,0,0,32"/>
                
                <TextBlock Text="Username" FontSize="14" FontWeight="Medium" 
                          Foreground="#333" Margin="0,0,0,8"/>
                <TextBox Text="{Binding Username}" Style="{StaticResource ModernTextBox}" 
                        Margin="0,0,0,20"/>
                
                <TextBlock Text="Password" FontSize="14" FontWeight="Medium" 
                          Foreground="#333" Margin="0,0,0,8"/>
                <TextBox Text="{Binding Password}" Style="{StaticResource ModernTextBox}" 
                        Margin="0,0,0,20"/>
                
                <TextBlock Text="Login as" FontSize="14" FontWeight="Medium" 
                          Foreground="#333" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                    <RadioButton x:Name="FarmerRadio" Content="Farmer" IsChecked="True" Margin="0,0,20,0" 
                                FontSize="14" Foreground="#333" GroupName="UserRole"/>
                    <RadioButton x:Name="DriverRadio" Content="Driver" Margin="0,0,20,0" 
                                FontSize="14" Foreground="#333" GroupName="UserRole"/>
                    <RadioButton x:Name="BuyerRadio" Content="Buyer" Margin="0,0,0,0" 
                                FontSize="14" Foreground="#333" GroupName="UserRole"/>
                </StackPanel>
                
                <Button Content="Sign In" Command="{Binding SignInCommand}" 
                       Style="{StaticResource ModernButton}" Margin="0,0,0,12"/>
                
                <Button Content="Sign Up" Click="SignUpButton_Click" 
                       Background="Transparent" Foreground="#2E7D32" 
                       BorderThickness="1" BorderBrush="#2E7D32" 
                       Height="45" FontSize="16" Margin="0,0,0,16"/>
                
                <TextBlock Text="{Binding Message}" Foreground="#F44336" 
                          HorizontalAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>