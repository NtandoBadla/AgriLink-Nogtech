<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="MyApp.Views.SignUpPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AgriLink - Sign Up" Height="700" Width="400" 
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>
    <Grid Background="#F5F5F5">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border Background="White" CornerRadius="12" Margin="30">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                </Border.Effect>
                <StackPanel Margin="30">
                    <TextBlock Text="ðŸŒ±" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                    <TextBlock Text="Join AgriLink" FontSize="32" FontWeight="Bold" 
                              HorizontalAlignment="Center" Foreground="#2E7D32" Margin="0,0,0,8"/>
                    <TextBlock Text="Create your account" FontSize="18" 
                              HorizontalAlignment="Center" Foreground="#666" Margin="0,0,0,32"/>
                    
                    <TextBlock Text="Full Name" FontSize="14" FontWeight="Medium" 
                              Foreground="#333" Margin="0,0,0,8"/>
                    <TextBox Style="{StaticResource ModernTextBox}" Margin="0,0,0,16"/>
                    
                    <TextBlock Text="Email" FontSize="14" FontWeight="Medium" 
                              Foreground="#333" Margin="0,0,0,8"/>
                    <TextBox Style="{StaticResource ModernTextBox}" Margin="0,0,0,16"/>
                    
                    <TextBlock Text="Phone" FontSize="14" FontWeight="Medium" 
                              Foreground="#333" Margin="0,0,0,8"/>
                    <TextBox Style="{StaticResource ModernTextBox}" Margin="0,0,0,16"/>
                    
                    <TextBlock Text="Password" FontSize="14" FontWeight="Medium" 
                              Foreground="#333" Margin="0,0,0,8"/>
                    <TextBox Style="{StaticResource ModernTextBox}" Margin="0,0,0,16"/>
                    
                    <TextBlock Text="I am a" FontSize="14" FontWeight="Medium" 
                              Foreground="#333" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                        <RadioButton Content="Farmer" IsChecked="True" Margin="0,0,20,0" 
                                    FontSize="14" Foreground="#333" GroupName="UserRole"/>
                        <RadioButton Content="Driver" Margin="0,0,20,0" 
                                    FontSize="14" Foreground="#333" GroupName="UserRole"/>
                        <RadioButton Content="Buyer" Margin="0,0,0,0" 
                                    FontSize="14" Foreground="#333" GroupName="UserRole"/>
                    </StackPanel>
                    
                    <Button Content="Create Account" Click="CreateAccountButton_Click"
                           Style="{StaticResource ModernButton}" Margin="0,0,0,12"/>
                    
                    <Button Content="Back to Login" Click="BackToLoginButton_Click"
                           Background="Transparent" Foreground="#2E7D32" 
                           BorderThickness="1" BorderBrush="#2E7D32" 
                           Height="45" FontSize="16" Margin="0,0,0,16"/>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>